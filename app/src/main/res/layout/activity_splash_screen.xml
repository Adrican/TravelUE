<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.beet.application.travelue.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimarioOscuro"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/rabanosplash"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:id="@+id/imgRabano"
                android:visibility="visible" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/mordisco1"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:id="@+id/imgRabano1"
                android:visibility="invisible" />

            <ImageView
                android:src="@drawable/mordisco2"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:id="@+id/imgRabano2"
                android:visibility="invisible" />

            <ImageView
                android:src="@drawable/mordisco3"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:id="@+id/imgRabano3"
                android:visibility="invisible" />

            <ImageView
                android:src="@drawable/mordisco4"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:id="@+id/imgRabano4"
                android:visibility="invisible" />

        </RelativeLayout>

        <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="80dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/tvName" />
        android:id="@+id/textView" />

        <TextView
            android:text="@string/slogan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvLogo"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="20dp" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>

