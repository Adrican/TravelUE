<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.application.travelue.CreateRouteMap"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimarioOscuro">

        <AutoCompleteTextView
            android:textColor="@color/white"
            android:hint="Origin"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etOrigen"
            android:padding="@dimen/activity_horizontal_margin" />


        <AutoCompleteTextView
            android:textColor="@color/white"
            android:hint="Destination"
            android:textColorHint="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etDestino"
            android:padding="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find path"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/button_custom"
                android:id="@+id/btnFindPath" />
            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_distance"
                />
            <TextView
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 km"
                android:id="@+id/tvDistance" />

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/ic_query_builder_white_48dp"

                />
            <TextView
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 min"
                android:id="@+id/tvDuration" />

        </LinearLayout>


        <fragment
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:id="@+id/map" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimarioOscuro"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin"
                android:weightSum="1">


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/spEstado"
                    style="@style/mySpinnerItemStyle"

                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="time"
                    android:textColorHint="@color/white"
                    android:hint="@string/hint_time"
                    android:textColor="@color/white"
                    android:ems="10"
                    android:id="@+id/etTime"
                    android:focusable="false"
                    android:layout_marginTop="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="@string/hint_date"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:ems="10"
                        android:id="@+id/etDate"
                        android:focusable="false"
                        android:layout_width="187dp" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="@string/hint_date2"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:ems="10"
                        android:id="@+id/etDate2"
                        android:focusable="false"
                        android:gravity="left" />


                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/white"
                        app:hintAnimationEnabled="true"
                        android:textColorLink="@android:color/white">


                        <EditText
                            android:id="@+id/etCar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/hint_car"
                            android:inputType="text"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/input_register"
                            android:textColorLink="@android:color/white" />

                    </android.support.design.widget.TextInputLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="right"
                        android:layout_height="106dp">
                        <ImageView
                            android:src="@drawable/nophoto"
                            android:id="@+id/ivNoPhotoCar"
                            android:layout_weight="2"
                            android:adjustViewBounds="true"
                            android:layout_height="80dp"
                            android:layout_width="80dp"
                            android:layout_gravity="center" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab2"
                            android:src="@drawable/ic_file_upload_white_48dp"
                            android:background="@color/colorAccent"
                            android:layout_weight="1"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="40dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />




                    </FrameLayout>

                </LinearLayout>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/spCarInsurance"
                    style="@style/mySpinnerItemStyle"/>







                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp">


                        <ImageView
                            android:src="@drawable/nofumarbueno"
                            android:id="@+id/imgNoFumar"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:visibility="invisible" />

                        <ImageView
                            android:layout_height="50dp"
                            android:src="@drawable/nocomer"
                            android:id="@+id/imgNoComer"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:visibility="invisible" />

                        <ImageView
                            android:layout_height="50dp"
                            android:src="@drawable/nopersonas"
                            android:id="@+id/imgNoPersonas"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:visibility="invisible" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp">


                        <ImageView
                            android:src="@drawable/sifumar"
                            android:id="@+id/imgSiFumar"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:visibility="visible" />

                        <ImageView
                            android:layout_height="50dp"
                            android:src="@drawable/sicomer"
                            android:id="@+id/imgSiComer"
                            android:layout_weight="1"
                            android:layout_width="50dp"
                            android:visibility="visible" />

                        <FrameLayout
                            android:layout_width="50dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_height="50dp"
                                android:src="@drawable/numpersonas"
                                android:id="@+id/imgSiPersonas"
                                android:layout_weight="1"
                                android:layout_width="50dp" />

                            <EditText
                                android:background="@drawable/shapeedittext"
                                android:textStyle="bold"
                                android:maxLength="1"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="1"
                                android:layout_gravity="center"
                                android:gravity="center_vertical|center"
                                android:layout_marginTop="6dp"
                                android:textSize="16dp"
                                android:inputType="number"
                                android:id="@+id/etCantidadPasajeros" />

                        </FrameLayout>

                    </LinearLayout>



                </FrameLayout>


                <FrameLayout android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pBarRoute"
                        android:layout_weight="0.27"
                        android:layout_gravity="bottom|center"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="100dp">

                        <Button
                            android:text="@string/btn_link_to_back"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnBack"
                            android:background="@drawable/button_custom"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_gravity="bottom|left"
                            android:layout_marginRight="30dp" />

                        <Button
                            android:id="@+id/btnCreateRoute"
                            style="?android:textAppearanceSmall"
                            android:background="@drawable/button_custom"
                            android:text="@string/action_sign_in_short"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right" />



                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <!-- Link to Login Screen -->


</android.support.design.widget.CoordinatorLayout>
